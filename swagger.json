{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Telbot OTP",
    "description": "OTP Server with Telegram Bot",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/user/register": @HG4AB",
      "post": {
        "tags": @HG4AB",
        "summary": "Register a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "string",
                    "example": @HG4AB
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Registration"
                }
              }
            }
          }
        }
      }
    },
    "/user/status": {
      "post": {
        "tags": @HG4AB,
        "summary": "Chek user registration status",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "string",
                    "example": @HG4AB,
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "registered"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/otp/generate": {
      "post": {
        "tags": ["OTP (One Time Password)"],
        "summary": "Generate OTP (One Time Password)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "string",
                    "example": @HG4AB,
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/otp/verify": {
      "post": {
        "tags": ["OTP (One Time Password)"],
        "summary": "Generate OTP (One Time Password)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "string",
                    "example": "myuser123"
                  },
                  "otp": {
                    "type": "string",
                    "example": "881278"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Registration": {
        "properties": {
          "_id": {
            "type": "string",
            "example": "6130a5bf601e7ba658e7cbf9"
          },
          "user_id": {
            "type": "string",
            "example": @HG4AB,
          },
          "reg_code": {
            "type": "string",
            "example": "881278"
          },
          "exp": {
            "type": "string",
            "example": "2021-09-02T11:21:55.887Z"
          }
        }
      }
    }
  }
}
